<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorHalfTransGray">

	<android.support.v4.view.ViewPager
		android:id="@+id/vp_photo_show_headview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="300dp" />

	<TextView
		android:id="@+id/tv_photo_show_index"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|end"
		android:layout_margin="@dimen/dp_20"
		android:background="@drawable/bg_halfgray_round"
		android:minWidth="@dimen/dp_60"
		android:paddingLeft="@dimen/dp_10"
		android:paddingRight="@dimen/dp_10"
		android:gravity="center"
		android:text="1/10"
		android:textSize="@dimen/text_14"
		android:textColor="@android:color/white" />

	<ImageView
		android:id="@+id/iv_photo_show_download"
		android:layout_width="wrap_content"
		android:layout_height="26dp"
		android:layout_gravity="bottom"
		android:layout_margin="@dimen/dp_20"
		android:background="@drawable/bg_halfgray_round"
		android:src="@mipmap/ic_download" />
</FrameLayout>
