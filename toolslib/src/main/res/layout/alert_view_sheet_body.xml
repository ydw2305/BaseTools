<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_alert_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/linear_alert_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_alert_cancel"
        android:background="@drawable/bg_alert_white_round"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_alert_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_6"
            android:textColor="@color/colorThinBlack"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_01"
            android:background="@color/colorGray"/>

        <ListView
            android:id="@+id/lv_alert_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:dividerHeight="@dimen/dp_01"
            android:divider="@color/colorGray"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="false"
            android:listSelector="@drawable/press_alert_white2gray_round"
            android:scrollbars="none" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_alert_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:background="@drawable/press_alert_white2gray_round"
        android:textColor="@color/colorBlue03"
        android:textStyle="bold"
        android:textSize="@dimen/text_18" />
</RelativeLayout>